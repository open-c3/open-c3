#!/usr/bin/env /data/Software/mydan/python3/bin/python3
# -*- coding: utf-8 -*-

import sys
import json
import os

from aliyunsdkcore.client import AcsClient
from aliyunsdkcore.auth.credentials import AccessKeyCredential
from aliyunsdkecs.request.v20140526.DescribeRegionsRequest import DescribeRegionsRequest


class Aliyun:
    def __init__(self, account, access_id, access_key):
        self.account = account
        self.access_id = access_id
        self.access_key = access_key

    def append_to_file(self, file_path, strings_list):
        if not os.path.exists(file_path):
            open(file_path, "w").close()

        with open(file_path, 'a') as file:
            for line in strings_list:
                file.write(line + '\n')

    def list_ecs_regions(self):
        credentials = AccessKeyCredential(self.access_id, self.access_key)
        client = AcsClient(region_id='cn-hangzhou', credential=credentials)

        request = DescribeRegionsRequest()
        request.set_accept_format('json')

        response = client.do_action_with_exception(request)

        result = []
        for item in json.loads(str(response, encoding='utf-8'))["Regions"]["Region"]:
            result.append(item["RegionId"])
        return sorted(result)

    def display(self):
            regions = self.list_ecs_regions()
            account_lines = []
            for region in regions:
                account_lines.append("{} {} {} {}".format(self.account, self.access_id, self.access_key, region))
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.ecs", account_lines)
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.ecs-volume", account_lines)
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.oss", account_lines)
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.rds", account_lines)
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.redis", account_lines)
            self.append_to_file("/data/Software/mydan/AGENT/device/conf/account/.tmp/aliyun.slb", account_lines)


def main(account, access_id, access_key):
    Aliyun(account, access_id, access_key).display()


if __name__ == '__main__':
    main(sys.argv[1], sys.argv[2], sys.argv[3])
